@page "{Country_SurveyId:int?}"
@model SurveyAnalysis.Pages.Master.Edit_CountryModel
@{
    ViewData["Title"] = "Edit";
}

<h2>@Model.Message</h2>
<h2>@Model.Message_1</h2>

<form method="post">

    <input type="hidden" asp-for="Country_Survey.Id" />

    <div class="form-group">
        <label asp-for="Country_Survey.cCode"></label>
        <input asp-for="Country_Survey.cCode" class="form-control" />
        <span class="text-danger" asp-validation-for="Country_Survey.cCode"></span>
    </div>

    <div class="form-group">
        <label asp-for="Country_Survey.cName_E"></label>
        <input asp-for="Country_Survey.cName_E" class="form-control" />
        <span class="text-danger" asp-validation-for="Country_Survey.cName_E"></span>
    </div>

    <div class="form-group">
        <label asp-for="Country_Survey.cName_A"></label>
        <input asp-for="Country_Survey.cName_A" class="form-control" />
        <span class="text-danger" asp-validation-for="Country_Survey.cName_A"></span>
    </div>

    <div class="form-group">
        <label asp-for="Country_Survey.cNationality_E"></label>
        <input asp-for="Country_Survey.cNationality_E" class="form-control" />
        <span class="text-danger" asp-validation-for="Country_Survey.cNationality_E"></span>
    </div>

    <div class="form-group">
        <label asp-for="Country_Survey.cNationality_A"></label>
        <input asp-for="Country_Survey.cNationality_A" class="form-control" />
        <span class="text-danger" asp-validation-for="Country_Survey.cNationality_A"></span>
    </div>

    <button type="submit" class="btn-btn-primary"> Save</button>

</form>
